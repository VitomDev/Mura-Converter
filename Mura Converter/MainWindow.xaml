<Window x:Class="Mura_Converter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Mura_Converter"
        Title="Mura Converter" Height="350" Width="500"
        Background="#1e1e1e"
        Foreground="White"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">

        <TextBlock Text="YouTube URL:" Margin="0,0,0,5" FontWeight="Bold" />
        <TextBox x:Name="UrlBox" Width="400" Height="30" FontSize="14" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="ConvertToMp3" Content="Convert to MP3" Width="120" Height="30" Margin="10" Click="ConvertToMp3_Click"/>
            <Button x:Name="ConvertToMp4" Content="Convert to MP4" Width="120" Height="30" Margin="10" Click="ConvertToMp4_Click"/>
        </StackPanel>
        
        <TextBlock x:Name="StatusText" Text="" Margin="0,20,0,0" TextAlignment="Center" FontStyle="Italic"/>
        
        <StackPanel Margin="10">
            <Button x:Name="OpenFolderButton" Content="Open Downloads Folder" Click="OpenFolder_Click" Margin="0,10,0,0" Width="200" Height="30" HorizontalAlignment="Center"/>
        </StackPanel>

    </StackPanel>
</Window>

